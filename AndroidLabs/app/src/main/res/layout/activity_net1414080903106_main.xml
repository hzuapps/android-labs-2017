<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"/>
    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10.0dp"
            android:text="天气预报"
            android:textSize="25.0sp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/title_city_locate"
            android:layout_width="wrap_content"
            android:layout_height="45.0dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10.0dp"
            android:text="切换城市"
            android:textSize="15.0sp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/weather_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_relative"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wether_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30.0dp"
            android:text="惠州"
            android:textColor="#FFFFFF"
            android:textSize="50.0sp"/>
        <TextView
            android:id="@+id/weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wether_cityName"
            android:text="25℃"
            android:textColor="#FFFFFF"
            android:textSize="25.0sp"/>
        <TextView
            android:id="@+id/weather_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/weather_temperature"
            android:text="阵雨"
            android:textColor="#FFFFFF"
            android:textSize="25.0sp"/>
    </RelativeLayout>
</RelativeLayout>
