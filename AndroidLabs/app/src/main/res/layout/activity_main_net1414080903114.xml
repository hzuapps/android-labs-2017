<LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:orientation="vertical" >
	<TextView
	    android:id="@+id/tv_diskReadRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
	<TextView
	    android:id="@+id/tv_diskWriteRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
	
	<TextView
	    android:id="@+id/tv_networkReadRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
	<TextView
	    android:id="@+id/tv_networkWriteRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />	
    <Button
	    android:id="@+id/btn_saveRateDatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveRate"
        android:text="saveRateDatas" />	
    <Button
	    android:id="@+id/btn_readRateDatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="readRate"
        android:text="readRateDatas" />	
</LinearLayout>

